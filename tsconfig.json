{
  "compilerOptions": {
    "experimentalDecorators": true,
    "rootDir": ".",
    "outDir": "build",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es2020.string"],
    "target": "ES2020",
    "skipLibCheck": true,
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["__test__/**/*.test.ts"]
}
